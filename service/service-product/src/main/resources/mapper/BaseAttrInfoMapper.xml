<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jing.gmall.product.mapper.BaseAttrInfoMapper">

    <resultMap id="BaseResultMap" type="com.jing.gmall.product.entity.BaseAttrInfo">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="attrName" column="attr_name" jdbcType="VARCHAR"/>
        <result property="categoryId" column="category_id" jdbcType="BIGINT"/>
        <result property="categoryLevel" column="category_level" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,attr_name,category_id,
        category_level
    </sql>

    <resultMap id="attrInfoList" type="com.jing.gmall.product.entity.BaseAttrInfo" autoMapping="true">
        <id property="id" column="id"/>
        <collection property="attrValueList"
                    ofType="com.jing.gmall.product.entity.BaseAttrValue"
                    autoMapping="true">
            <id property="id" column="avid"/>
        </collection>
    </resultMap>

    <select id="getAttrInfoList" resultMap="attrInfoList">
        select bai.*, bav.id avid, bav.value_name, bav.attr_id
        from base_attr_info bai
        left join
        base_attr_value bav
        on
        bai.id = bav.attr_id
        <where>
            <if test="category1Id != 0">
                (category_id = #{category1Id} and category_level = 1)
            </if>
            <if test="category2Id != 0">
                or (category_id = #{category2Id} and category_level = 2)
            </if>
            <if test="category3Id != 0">
                or (category_id = #{category3Id} and category_level = 3)
            </if>
        </where>
    </select>
</mapper>
